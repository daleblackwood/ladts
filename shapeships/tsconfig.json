{
    "compilerOptions": {
        "module": "amd",
        "target": "es2016",
        "lib": ["es2016", "dom"],
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outFile": "./dist/shapeships.js",
        "sourceMap": true,
        "baseUrl": "src",
        "paths": {
            "lad/*": ["../../lad/src/*"]
        }
    },
    "include": [
        "src/**/*",
        "../lad/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}